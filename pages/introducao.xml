<page id="introducao" bg_image="aeroporto.png" bg_music="osts-vio.mp3">
  <!-- Agente de Texto Inicial -->
  <agent
    id="teste"
    text="Você, um aviador da CAN, deve entregar uma encomenda, mas antes disso entre aeroporto"
    color="white"
    x="center"
    y="100"
    font-size="20"
    animation="typewriter"
  />

  <!-- Agente Arrastável -->
  <agent
    id="protagonista"
    color="blue"
    x="100"
    y="439"
    image="forest-hero-idle.png"
    font-size="18"
    draggable="true"
    width="120"
    height="120"
  />

  <!-- Agente Alvo -->
  <agent
    id="entrada_aeroporto"
    text="Alvo"
    color="green"
    x="650"
    y="500"
    font-size="18"
    on_drop="goToPage('pega-item')"
  />

  <!-- tileset -->
  <fab-for each="i in $lista_tileset">
    <agent
      id="chao-$i"
      image="tech-floor.png"
      x="$i*50-50"
      y="550"
      width="100%"
      height="50"
    />
  </fab-for>
</page>