<page id="introducao" bg_image="tech-bg-lab.png" bg_music="osts-vio.mp3">
  <!-- Agente de Texto Inicial -->
  <agent
    id="teste"
    text="Você, um aviador da CAN, deve entregar uma encomenda, mas antes disso entre aeroporto"
    color="white"
    x="center"
    y="100"
    font-size="20"
    animation="typewriter"
  />

  <!-- Agente Arrastável -->
  <agent
    id="protagonista"
    text="Arraste-me"
    color="blue"
    x="100"
    y="300"
    font-size="18"
    draggable="true"
  />

  <!-- Agente Alvo -->
  <agent
    id="entrada_aeroporto"
    text="Alvo"
    color="green"
    x="400"
    y="300"
    font-size="18"
    on_drop="goToPage('pega-item')"
  />

  <!-- Chão -->
  <fab-for each="i in $lista_tileset">
    <agent
      id="chao-$i"
      image="tech-floor.png"
      x="$i*57-56"
      y="500"
      width="100%"
      height="50"
    />
  </fab-for>
</page>
