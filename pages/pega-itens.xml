<page id="pega-itens" bg_color="black">
  <!-- Mensagem no topo -->
  <agent
    id="mensagem"
    x="center"
    y="top"
    text="Ainda faltam itens a serem pegos."
    color="white"
    font-size="18"
  />

  <!-- Gavetas e itens -->
  <fab-for each="i in $lista">
    <fab-if when="not ($i = 2 or $i = 4 or $i = 8)">
      <agent
        id="gaveta-$i"
        x="($i-1)*70+50"
        y="300"
        text="Gaveta $i"
        color="white"
        font-size="16"
      />
    </fab-if>
  </fab-for>
  <agent
    id="gaveta-2"
    x="120"
    y="300"
    text="Gaveta 2"
    color="white"
    font-size="16"
  />
  <agent
    id="gaveta-8"
    x="540"
    y="300"
    text="Gaveta 8"
    color="white"
    font-size="16"
  />
  <agent
    id="gaveta-4"
    x="260"
    y="300"
    text="Gaveta 4"
    color="white"
    font-size="16"
  />
  <!-- Porta de saída -->
  <agent
    id="porta-saida"
    x="640"
    y="525"
    text="Porta de Saída"
    color="white"
    font-size="20"
    on_click="if ($item1 and $item2 and $item3) goToPage('fim') else set('mensagem', 'Você ainda não pode sair.')"
  />
</page>
