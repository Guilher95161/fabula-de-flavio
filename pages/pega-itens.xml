<page id="pega-itens" bg_color="black">
  <!-- Mensagem no topo -->
  <agent
    id="mensagem"
    x="center"
    y="top"
    text="Ainda faltam itens a serem pegos."
    color="white"
    font-size="18"
  />

  <!-- Gavetas e itens -->
  <fab-for each="i in $lista">
    <agent
      id="gaveta-$i"
      x="10"
      y="$i * 5 + 10"
      text="Gaveta $i"
      color="white"
      font-size="16"
    />
  </fab-for>

  <!-- Porta de saída -->
  <agent
    id="porta-saida"
    x="right"
    y="center"
    text="Porta de Saída"
    color="white"
    font-size="20"
    on_click="if ($item1 and $item2 and $item3) goToPage('fim') else set('mensagem', 'Você ainda não pode sair.')"
  />
</page>
