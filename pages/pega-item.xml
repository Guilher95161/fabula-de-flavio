<page id="pega-item" bg_color="black">
  <agent
    id="mensagem"
    text="Ainda faltam items a serem pegos"
    x="center"
    y="top"
    color="white"
    font-size="18"
  />
  <fab-for each="i in $lista">
    <fab-if when="not ($i = 2 or $i = 4 or $i = 8)">
      <agent
        id="gaveta-$i"
        x="($i-1)*70+50"
        y="300"
        text="Gaveta $i"
        color="white"
        font-size="16"
      />
    </fab-if>
  </fab-for>
  <agent
    id="gaveta-2"
    x="120"
    y="300"
    text="Gaveta 2"
    color="white"
    font-size="16"
    on_click="set(item2, true)"
  />
  <agent
    id="gaveta-8"
    x="540"
    y="300"
    text="Gaveta 8"
    color="white"
    font-size="16"
    on_click="set(item8, true)"
  />
  <agent
    id="gaveta-4"
    text="Gaveta 4"
    x="260"
    y="300"
    color="white"
    font-size="16"
    on_click="set(item4, true)"
  />
  <agent
    id="porta-saida"
    text="Porta de Saída"
    x="640"
    y="525"
    color="white"
    font-size="20"
    on_click="if ($item2 and $item4 and $item8) goToPage('fim') else set(mensagem_pega_itens, Você ainda não pode sair)"
  />
</page>
