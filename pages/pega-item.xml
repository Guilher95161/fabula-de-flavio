<page id="pega-item" bg_color="black">
  <agent
    id="mensagem"
    text="$mensagem_pega_itens"
    x="center"
    y="top"
    color="white"
    font-size="18"
  />
  <fab-for each="i in $lista">
    <fab-if when="not ($i = 2 or $i = 4 or $i = 8)">
      <agent
        id="gaveta-$i"
        x="($i-1)*70+50"
        y="300"
        text="Gaveta $i"
        color="white"
        font-size="16"
        on_click="set(mensagem_pega_itens, 'Item errado!')"
      />
    </fab-if>
  </fab-for>
  <agent
    id="gaveta-2"
    x="120"
    y="300"
    text="Gaveta 2"
    color="white"
    font-size="16"
    on_click="set(item2, 1);set(mensagem_pega_itens, 'Pegou um dos Itens!')"
  />
  <agent
    id="gaveta-8"
    x="540"
    y="300"
    text="Gaveta 8"
    color="white"
    font-size="16"
    on_click="set(item8, 1);setIf($item8=1, mensagem_pega_itens, 'Item já pego');setIf($item8=0,mensagem_pega_itens, 'Pegou um dos Itens!')"
  />
  <agent
    id="gaveta-4"
    text="Gaveta 4"
    x="260"
    y="300"
    color="white"
    font-size="16"
    on_click="set(item4, 1);set(mensagem_pega_itens, 'Pegou um dos Itens!')"
  />
  <fab-if when="$item2 = 1 and $item4=1 and $item8=1">
    <agent
      id="porta-saida"
      text="Porta de Saída"
      x="640"
      y="525"
      color="white"
      font-size="20"
      on_click="goToPage('fim')"
    />
  </fab-if>
  <fab-if when="not ($item2=1 and $item4=1 and $item8=1)">
    <agent
      id="porta-saída"
      text="Porta de Saída"
      x="640"
      y="525"
      color="white"
      font-size="20"
      on_click="set(mensagem_pega_itens, 'Falta itens para pegar')"
    />
  </fab-if>
</page>
