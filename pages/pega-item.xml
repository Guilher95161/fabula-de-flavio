<page id="pega-item" bg_color="black">
  <agent
    id="mensagem_principal"
    text="Pegue todos os itens para a viagem!"
    x="center"
    color="white"
    font-size="18"
  />
  <agent
    id="mensagem_dinamica"
    text="$mensagem_pega_itens"
    x="center"
    y="50"
    color="white"
    font-size="18"
    animation="typewriter"
  />
  <fab-for each="i in $lista">
    <fab-if when="not ($i = 2 or $i = 4 or $i = 8)">
      <fab-if when=" ($i=1 or $i=3 or $i=5)">
        <agent
          id="gaveta-$i"
          x="160+($i)*70"
          y="200"
          text="Gaveta $i"
          color="white"
          font-size="16"
          on_click="set(mensagem_pega_itens, 'Item errado!');setIf($item8=1 and $item2=1 and $item4=1, mensagem_pega_itens, 'Já pegou todos os itens!')"
        />
      </fab-if>
      <fab-if when="($i=6 or $i=7 or $i=9 or $i=10)">
        <agent
          id="gaveta-$i"
          x="($i-5)*70+160"
          y="245"
          text="Gaveta $i"
          color="white"
          font-size="16"
          on_click="set(mensagem_pega_itens, 'Item errado!');setIf($item8=1 and $item2=1 and $item4=1, mensagem_pega_itens, 'Já pegou todos os itens!')"
        />
      </fab-if>
    </fab-if>
  </fab-for>
  <agent
    id="gaveta-2"
    x="(2)*70+160"
    y="200"
    text="Gaveta 2"
    color="white"
    font-size="16"
    on_click="set(item2, 1);set(mensagem_pega_itens, 'Pegou um dos Itens!');setIf($item8=1 and $item2=1 and $item4=1, mensagem_pega_itens, 'Já pegou todos os itens!')"
  />
  <agent
    id="gaveta-8"
    x="(8-5)*70+160"
    y="245"
    text="Gaveta 8"
    color="white"
    font-size="16"
    on_click="set(item8, 1);set(mensagem_pega_itens, 'Pegou um dos Itens!');setIf($item8=1 and $item2=1 and $item4=1, mensagem_pega_itens, 'Já pegou todos os itens!')"
  />
  <agent
    id="gaveta-4"
    text="Gaveta 4"
    x="(4)*70+160"
    y="200"
    color="white"
    font-size="16"
    on_click="set(item4, 1);set(mensagem_pega_itens, 'Pegou um dos Itens!');setIf($item8=1 and $item2=1 and $item4=1, mensagem_pega_itens, 'Já pegou todos os itens!')"
  />
  <fab-if when="$item2 = 1 and $item4=1 and $item8=1">
    <agent
      id="porta-saida"
      text="Porta de Saída"
      x="640"
      y="525"
      color="white"
      font-size="20"
      on_click="goToPage('fim')"
    />
  </fab-if>
  <fab-if when="not ($item2=1 and $item4=1 and $item8=1)">
    <agent
      id="porta-saída"
      text="Porta de Saída"
      x="640"
      y="525"
      color="white"
      font-size="20"
      on_click="set(mensagem_pega_itens, 'Falta itens para pegar')"
    />
  </fab-if>
  <agent
    id="dica"
    text="DICA"
    color="white"
    x="20"
    y="525"
    font-size="20"
    on_click="set(mensagem_dica, 'Pense em um certo número elevado a 1,2 e 3')"
  />
  <agent
    id="mensagem_dica"
    text="$mensagem_dica"
    color="white"
    font-size="18"
    x="100"
    y="525"
  />
</page>
